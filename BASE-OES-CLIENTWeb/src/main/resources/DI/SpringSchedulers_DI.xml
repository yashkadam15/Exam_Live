<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- schedular of DB backup -->
	<bean id="databaseAutoBackupTask" class="mkcl.oesclient.dailybackup.DatabaseAutoBackupTask" />

	<bean id="cronTriggerForDatabaseAutoBackupJob" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="jobDetailBeanForDatabaseAutoBackupJob" />
		 <property name="cronExpression" value="0 30 16 * * ?" />
	</bean>
	
	<bean id="simpleTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
	  <property name="jobDetail" ref="jobDetailBeanForDatabaseAutoBackupJob"/>
	  <property name="repeatCount" value="0"></property>
	</bean>

	<bean id="jobDetailBeanForDatabaseAutoBackupJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="mkcl.oesclient.dailybackup.DatabaseAutoBackupJob" />
		<property name="jobDataAsMap">
			<map>
				<entry key="databaseAutoBackupTask" value-ref="databaseAutoBackupTask" />
			</map>
		</property>
		<property name="durability" value="true" />
	</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
		id="databaseAutoBackupScheduler">
		<property name="jobDetails">
            <list>
                <ref bean="jobDetailBeanForDatabaseAutoBackupJob" />
            </list>
        </property>
		<property name="triggers">
			<list>
				<!-- <ref bean="cronTriggerForDatabaseAutoBackupJob" /> -->
				<ref bean="simpleTrigger" />
			</list>
		</property>
		<property name="quartzProperties">
			<props>
				<prop key="org.quartz.threadPool.threadCount">1</prop>
			</props>
		</property>
	</bean>
</beans>